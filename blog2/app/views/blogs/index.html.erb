<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
    <tr>
        <th>タイトル</th>
        <th>著者</th>
        <th>内容</th>
        <th>メール</th>
    </tr>
    <% @blogs.each do | blog | %>
    <tr>
        <td><%= blog.title %></td>
        <td><%= blog.name %></td>
        <td><%= blog.content %></td>
        <td><%= blog.mail %></td>
        
        <td><%= link_to "詳細を確認する", blog_path(blog.id) %></td>
        <td><%= link_to "ブログを編集する",edit_blog_path(blog.id) %></td>
        <td><%= link_to "ブログを削除する",blog_path(blog.id), method: :delete, data: {confirm: '削除しても良いですか'} %></td>
    </tr>
    
    <% end %>
    
</table>

<%= link_to "新規投稿する", new_blog_path %>